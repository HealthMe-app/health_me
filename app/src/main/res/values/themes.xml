<resources xmlns:tools="http://schemas.android.com/tools">
    // application theme
    <style name="Theme.Healthme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/dark_birch</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="actionBarTheme">@style/AppTheme.AppBarOverlay</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/dark_birch</item>
    </style>
    <style name="Theme.Launcher" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.Healthme</item>
    </style>

    // common style

    <style name="EdittextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/bg_white_10</item>
        <item name="android:elevation">1dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:textColor">@color/dark_birch</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textCursorDrawable">@drawable/ic_cursor</item>
    </style>

    // calendar style

    <style name="textCalendarSettingsStyle">
        <item name="android:textColor">@color/dark_birch</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="EdittextCalendarStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_white_10</item>
        <item name="android:elevation">1dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/dark_birch</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_pink</item>
    </style>

    <style name="CalendarButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/selector_bg_birch_10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginHorizontal">30dp</item>
        <item name="android:layout_marginVertical">20dp</item>
    </style>

    // authorization button style

    <style name="AuthorizationButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/selector_bg_birch_10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AuthorizationButtonStyleWhite" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/selector_bg_birch_stroke_10</item>
        <item name="android:textColor">@color/birch</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    // save and cancel button style

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">135dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginVertical">15dp</item>
    </style>

    <style name="CancelButtonStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/bg_dark_pink_stroke_10</item>
        <item name="android:textColor">@color/dark_pink</item>
        <item name="android:text">@string/cancel</item>
        <item name="android:layout_marginStart">30dp</item>
    </style>

    <style name="SaveButtonStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/bg_dark_pink_10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/save</item>
        <item name="android:layout_marginEnd">30dp</item>
    </style>
</resources>