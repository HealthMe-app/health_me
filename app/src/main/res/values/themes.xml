<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HealthMe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="EdittextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/bg_et_dialog</item>
        <item name="android:elevation">1dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:textColor">@color/dark_birch</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textCursorDrawable">@drawable/ic_cursor</item>
    </style>

    <style name="AuthorizationButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/selector_bg_btn_calendar</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AuthorizationButtonStyleWhite" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/bg_btn_authorization</item>
        <item name="android:textColor">@color/birch</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">22sp</item>
    </style>


    <style name="CalendarButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/selector_bg_btn_calendar</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginHorizontal">30dp</item>
        <item name="android:layout_marginVertical">20dp</item>
    </style>

</resources>