<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/bg_gray_20"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:background="@color/dark_pink"
        android:gravity="center"
        android:paddingVertical="20dp"
        android:text="@string/add_new_symptom"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/listOfSymptom"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <TableRow
            android:id="@+id/firstSymptoms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            tools:ignore="UselessParent">

            <ImageButton
                android:id="@+id/btnLightning"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="4.8dp"
                android:background="@drawable/ic_symptom_circle_birch"
                android:src="@drawable/ic_symptom_lightning"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/btnFaint"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="4.8dp"
                android:background="@drawable/ic_symptom_circle_birch"
                android:src="@mipmap/ic_symptom_faint_foreground"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/btnSick"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="4.8dp"
                android:background="@drawable/ic_symptom_circle_birch"
                android:src="@mipmap/ic_symptom_sick_foreground"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/btnChickenpox"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="4.8dp"
                android:background="@drawable/ic_symptom_circle_birch"
                android:src="@mipmap/ic_symptom_chickenpox_foreground"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/btnStomachachePain"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="4.8dp"
                android:background="@drawable/ic_symptom_circle_birch"
                android:src="@mipmap/ic_symptom_stomach_pain_foreground"
                tools:ignore="ContentDescription" />
        </TableRow>
    </TableLayout>

    <View
        android:id="@+id/firstLine"
        android:layout_width="300dp"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/line"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listOfSymptom" />

    <EditText
        android:id="@+id/medicineName"
        style="@style/EdittextStyle"
        android:layout_gravity="center"
        android:hint="@string/title"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstLine"
        android:importantForAutofill="no" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCancel"
        style="@style/CancelButtonStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medicineName" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSave"
        style="@style/SaveButtonStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medicineName" />

</androidx.constraintlayout.widget.ConstraintLayout>