<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_gray_20"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dark_pink_top_10"
        android:gravity="center"
        android:paddingVertical="20dp"
        android:text="@string/add_medicine"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/trackerDateAndTime"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        style="@style/EdittextStyle"
        android:hint="@string/date_and_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:inputType="date"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/trackerNameOfMedicine"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        style="@style/EdittextStyle"
        android:hint="@string/name_of_medicine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trackerDateAndTime"
        android:inputType="text"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/trackerNote"
        style="@style/EdittextStyle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/note"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trackerNameOfMedicine"
        android:inputType="text"
        android:importantForAutofill="no" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCancel"
        style="@style/CancelButtonStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trackerNote" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSave"
        style="@style/SaveButtonStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trackerNote" />
</androidx.constraintlayout.widget.ConstraintLayout>